{
  "app-id": "io.mgba.mGBA",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "command": "mgba-qt",
  "rename-desktop-file": "mgba-qt.desktop",
  "rename-icon": "mgba",
  "rename-appdata-file": "mgba.appdata.xml",
  "finish-args": [
    "--device=dri",
    "--filesystem=home:ro",
    "--socket=pulseaudio",
    "--socket=wayland",
    "--socket=x11"
  ],
  "cleanup": [
    "/lib/libQt5MultimediaWidgets.so*",
    "/lib/libqgsttools_p.so*",
    "/lib/libQt5Concurrent.so*",
    "/lib/libQt5EglFSDeviceIntegration.so*",
    "/lib/libQt5PrintSupport.so*",
    "/lib/libQt5Sql.so*",
    "/lib/libQt5Test.so*",
    "/lib/libQt5Xml.so*"
  ],
  "modules": [
    "shared-modules/qt5/qt5-qtbase.json",
    "shared-modules/qt5/qt5-qtmultimedia.json",
    {
      "name": "mgba",
      "buildsystem": "cmake",
      "config-opts": [
        "-DCMAKE_INSTALL_LIBDIR=lib"
      ],
      "build-commands": [
        "install -Dm644 appdata.xml /app/share/appdata/mgba.appdata.xml"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/mgba-emu/mgba/archive/0.6.0.tar.gz",
          "sha256": "d8cf01befd7f452415a9191b058bc21e47e39c7f2c865257cd93c2780b17fe07"
        },
        {
          "type": "file",
          "path": "appdata.xml"
        }
      ]
    }
  ]
}
